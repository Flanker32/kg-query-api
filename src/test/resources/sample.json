{
  "@context": {
    "@vocab": "http://schema.hbp.eu/graph_query/",
    "schema": "http://schema.org/",
    "minds": "http://hbp.eu/minds#",
    "search": "http://schema.hbp.eu/search_ui/",
    "nexus": "https://nexus-dev.humanbrainproject.org/vocabs/nexus/core/terms/v0.1.0/",
    "nexus_instance": "https://nexus-dev.humanbrainproject.org/v0/schemas/",
    "fieldname": {
      "@id": "fieldname",
      "@type": "@id"
    },
    "relative_path": {
      "@id": "relative_path",
      "@type": "@id"
    },
    "root_schema": {
      "@id": "root_schema",
      "@type": "@id"
    }
  },
  "@type": "DataTransformation",
  "schema:name": "Sample",
  "root_schema": "nexus_instance:minds/experiment/sample/v0.0.4",
  "fields": [
    {
      "relative_path": "schema:identifier",
      "required": true
    },
    {
      "fieldname": "search:title",
      "relative_path": "schema:name",
      "required": true
    },
    {
      "fieldname": "search:weightPreFixation",
      "relative_path": "minds:weightPreFixation"
    },
    {
      "fieldname": "search:parcellationAtlas",
      "relative_path": [
        "minds:parcellationAtlas",
        "schema:name"
      ]
    },
    {
      "fieldname": "search:parcellationRegion",
      "relative_path": [
        "minds:parcellationRegion",
        "schema:name"
      ]
    },
    {
      "fieldname": "search:brainViewer",
      "relative_path": {
        "@id": "minds:reference",
        "reverse": true
      },
      "fields": [
        {
          "fieldname": "search:link",
          "relative_path": "minds:link"
        },
        {
          "fieldname": "search:name",
          "relative_path": "schema:name"
        }
      ]
    },
    {
      "fieldname": "search:methods",
      "relative_path": [
        "minds:methods",
        "schema:name"
      ]
    },
    {
      "fieldname": "search:files",
      "relative_path": [
        {
          "@id": "minds:associated_entity",
          "reverse": true
        },
        "minds:file"
      ],
      "fields": [
        {
          "fieldname": "search:name",
          "relative_path": "schema:name"
        },
        {
          "fieldname": "search:absolutePath",
          "relative_path": "minds:absolute_path"
        }
      ]
    },
    {
      "fieldname": "search:subjects",
      "relative_path": {
        "@id": "minds:samples",
        "reverse": true
      },
      "fields": [
        {
          "fieldname": "search:name",
          "relative_path": "schema:name"
        },
        {
          "fieldname": "search:uuid",
          "relative_path": "nexus:uuid"
        },
        {
          "fieldname": "search:identifier",
          "relative_path": "schema:identifier"
        },
        {
          "fieldname": "search:age",
          "relative_path": "minds:age"
        },
        {
          "fieldname": "search:weight",
          "relative_path": "minds:weight"
        },
        {
          "fieldname": "search:strain",
          "relative_path": "minds:strains"
        },
        {
          "fieldname": "search:genotype",
          "relative_path": "minds:genotype"
        },
        {
          "fieldname": "search:species",
          "relative_path": "minds:species",
          "fields": [
            {
              "fieldname": "search:name",
              "relative_path": "schema:name"
            },
            {
              "fieldname": "search:uuid",
              "relative_path": "nexus:uuid"
            },
            {
              "fieldname": "search:identifier",
              "relative_path": "schema:identifier"
            }
          ]
        }
      ]
    },
    {
      "fieldname": "search:datasets",
      "required": true,
      "relative_path": [
        {
          "@id": "minds:samples",
          "reverse": true
        },
        {
          "@id": "minds:subjects",
          "reverse": true
        },
        {
          "@id": "minds:specimen_group",
          "reverse": true
        }
      ],
      "fields":[
        {
          "fieldname": "search:name",
          "relative_path": "schema:name"
        },
        {
          "fieldname": "search:uuid",
          "relative_path": "nexus:uuid"
        },
        {
          "fieldname": "search:identifier",
          "relative_path": "schema:identifier"
        },
        {
          "fieldname": "search:componentName",
          "relative_path": ["minds:component", "schema:name"]
        }
      ]
    }
  ]
}